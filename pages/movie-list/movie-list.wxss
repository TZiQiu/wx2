/* pages/movie-list/movie-list.wxss */
@import '/pages/movie-rating/movie-rating.wxss';
.movie-wrapper {
  padding: 30rpx;
  border-bottom: 3rpx solid #e6e6e6;
}

.movie-content {
  display: flex;
  flex-direction: row;
}

.movie-content .poster {
  width: 160rpx;
  height: 240rpx;
}

.movie-content .movie-summary {
  width: 380rpx;
  display: flex;
  flex-direction: column;
  margin: 0 20rpx;
}

.movie-content .name {
  font-weight: 600;
  color: #4a4a4a;
  font-size: 32rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  line-height: 1.6;
}

.movie-content .directors, .casts, .genres, .wish-count {
  font-size: 26rpx;
  color: #9e9e9e;
  font-weight: 500;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  line-height: 1.6;
}

.movie-content .wish-btn , .tickek-btn {
  width: 90rpx;
  height: 50rpx;
  color: #9dbff9;
  font-size: 28rpx;
  align-self: center;
  line-height: 50rpx;
  border-radius: 6rpx;
  border-width: 3rpx;
  border-style: solid;
  border-color: #9dbff9;
  text-align: center;
}